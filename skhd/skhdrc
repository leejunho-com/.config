# -- Changing Window Focus --

# change window focus within space
fn - j : yabai -m window --focus south
fn - k : yabai -m window --focus north
fn - h : yabai -m window --focus west
fn - l : yabai -m window --focus east

alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# change focus between external displays
fn - 0x32 : yabai -m display --focus recent # "backtick"
fn - 0x2A : yabai -m display --focus recent # "backslash"

alt - 0x32 : yabai -m display --focus recent # "backtick"
alt - 0x2A : yabai -m display --focus recent # "backslash"

# -- Modifying the Layout --

# rotate layout clockwise
fn + ctrl - r : yabai -m space --rotate 270

alt + ctrl - r : yabai -m space --rotate 270

# flip along y-axis
fn + ctrl - y : yabai -m space --mirror y-axis

alt + ctrl - y : yabai -m space --mirror y-axis

# flip along x-axis
fn + ctrl - x : yabai -m space --mirror x-axis

alt + ctrl - x : yabai -m space --mirror x-axis

# toggle window float
fn + ctrl - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

alt + ctrl - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# -- Modifying Window Size --

# resize window
fn + ctrl - h : yabai -m window west --resize right:-100:0 2> /dev/null || yabai -m window --resize right:-100:0
fn + ctrl - j : yabai -m window north --resize bottom:0:100 2> /dev/null || yabai -m window --resize bottom:0:100
fn + ctrl - k : yabai -m window south --resize top:0:-100 2> /dev/null || yabai -m window --resize top:0:-100
fn + ctrl - l : yabai -m window east --resize left:100:0 2> /dev/null || yabai -m window --resize left:100:0

alt + ctrl - h : yabai -m window west --resize right:-100:0 2> /dev/null || yabai -m window --resize right:-100:0
alt + ctrl - j : yabai -m window north --resize bottom:0:100 2> /dev/null || yabai -m window --resize bottom:0:100
alt + ctrl - k : yabai -m window south --resize top:0:-100 2> /dev/null || yabai -m window --resize top:0:-100
alt + ctrl - l : yabai -m window east --resize left:100:0 2> /dev/null || yabai -m window --resize left:100:0

# maximize a window
fn + ctrl - m : yabai -m window --toggle zoom-fullscreen

alt + ctrl - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
fn + ctrl - e : yabai -m space --balance

alt + ctrl - e : yabai -m space --balance

# -- Moving Windows Around --

# swap windows
fn + shift - j : yabai -m window --swap south
fn + shift - k : yabai -m window --swap north
fn + shift - h : yabai -m window --swap west
fn + shift - l : yabai -m window --swap east

alt + shift - j : yabai -m window --swap south
alt + shift - k : yabai -m window --swap north
alt + shift - h : yabai -m window --swap west
alt + shift - l : yabai -m window --swap east

# move window and split
fn + shift + ctrl - j : yabai -m window --warp south
fn + shift + ctrl - k : yabai -m window --warp north
fn + shift + ctrl - h : yabai -m window --warp west
fn + shift + ctrl - l : yabai -m window --warp east

alt + shift + ctrl - j : yabai -m window --warp south
alt + shift + ctrl - k : yabai -m window --warp north
alt + shift + ctrl - h : yabai -m window --warp west
alt + shift + ctrl - l : yabai -m window --warp east

# move window to display left and right
fn + shift - 0x32 : yabai -m window --display recent; yabai -m display --focus recent; # "backtick"
fn + shift - 0x2A : yabai -m window --display recent; yabai -m display --focus recent; # "backslash"
fn + ctrl - g : yabai -m window --display east; yabai -m display --focus east;

alt + shift - 0x32 : yabai -m window --display recent; yabai -m display --focus recent; # "backtick"
alt + shift - 0x2A : yabai -m window --display recent; yabai -m display --focus recent; # "backslash"
alt + ctrl - g : yabai -m window --display east; yabai -m display --focus east;

# move window to prev and next space
fn + ctrl - p : yabai -m window --space prev;
fn + ctrl - n : yabai -m window --space next;

alt + ctrl - p : yabai -m window --space prev;
alt + ctrl - n : yabai -m window --space next;

# switch space
fn - 1 : yabai -m space --focus 11
fn - 2 : yabai -m space --focus 12
fn - 3 : yabai -m space --focus 13
fn - 4 : yabai -m space --focus 14
fn - 5 : yabai -m space --focus 15
fn - 6 : yabai -m space --focus 16
fn - 7 : yabai -m space --focus 17
fn - 8 : yabai -m space --focus 18
fn - 9 : yabai -m space --focus 19
fn - 0 : yabai -m space --focus 20

alt - 1 : yabai -m space --focus 11
alt - 2 : yabai -m space --focus 12
alt - 3 : yabai -m space --focus 13
alt - 4 : yabai -m space --focus 14
alt - 5 : yabai -m space --focus 15
alt - 6 : yabai -m space --focus 16
alt - 7 : yabai -m space --focus 17
alt - 8 : yabai -m space --focus 18
alt - 9 : yabai -m space --focus 19
alt - 0 : yabai -m space --focus 20

# move window to space
ctrl + shift - 1 : yabai -m window --space 1;
ctrl + shift - 2 : yabai -m window --space 2;
ctrl + shift - 3 : yabai -m window --space 3;
ctrl + shift - 4 : yabai -m window --space 4;
ctrl + shift - 5 : yabai -m window --space 5;
ctrl + shift - 6 : yabai -m window --space 6;
ctrl + shift - 7 : yabai -m window --space 7;
ctrl + shift - 8 : yabai -m window --space 8;
ctrl + shift - 9 : yabai -m window --space 9;
ctrl + shift - 0 : yabai -m window --space 10;

fn + shift - 1 : yabai -m window --space 11;
fn + shift - 2 : yabai -m window --space 12;
fn + shift - 3 : yabai -m window --space 13;
fn + shift - 4 : yabai -m window --space 14;
fn + shift - 5 : yabai -m window --space 15;
fn + shift - 6 : yabai -m window --space 16;
fn + shift - 7 : yabai -m window --space 17;
fn + shift - 8 : yabai -m window --space 18;
fn + shift - 9 : yabai -m window --space 19;
fn + shift - 0 : yabai -m window --space 20;

