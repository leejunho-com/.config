# -- Changing Window Focus --

# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east
# change focus between external displays
alt - escape : yabai -m display --focus recent
alt - x      : yabai -m display --focus recent

# -- Modifying the Layout --

# rotate layout clockwise
alt + ctrl - r : yabai -m space --rotate 270

# flip along y-axis
alt + ctrl - y : yabai -m space --mirror y-axis

# flip along x-axis
alt + ctrl - x : yabai -m space --mirror x-axis

# -- Modifying Window Size --

# resize window
alt + ctrl - h : yabai -m window west --resize right:-100:0 2> /dev/null || yabai -m window --resize right:-100:0
alt + ctrl - j : yabai -m window north --resize bottom:0:100 2> /dev/null || yabai -m window --resize bottom:0:100
alt + ctrl - k : yabai -m window south --resize top:0:-100 2> /dev/null || yabai -m window --resize top:0:-100
alt + ctrl - l : yabai -m window east --resize left:100:0 2> /dev/null || yabai -m window --resize left:100:0

# maximize a window
alt + ctrl - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
alt + ctrl - e : yabai -m space --balance

# -- Moving Windows Around --

# swap windows
alt + shift - j : yabai -m window --swap south
alt + shift - k : yabai -m window --swap north
alt + shift - h : yabai -m window --swap west
alt + shift - l : yabai -m window --swap east

# move window and split
alt + shift + ctrl - j : yabai -m window --warp south
alt + shift + ctrl - k : yabai -m window --warp north
alt + shift + ctrl - h : yabai -m window --warp west
alt + shift + ctrl - l : yabai -m window --warp east

# move window to display left and right
alt + shift - escape : yabai -m window --display recent; yabai -m display --focus recent;
alt + shift - x      : yabai -m window --display recent; yabai -m display --focus recent;
alt + ctrl - g       : yabai -m window --display east; yabai -m display --focus east;

# move window to prev and next space
alt + ctrl - p : yabai -m window --space prev;
alt + ctrl - n : yabai -m window --space next;

# switch space
alt - 1 : yabai -m space --focus 11
alt - 2 : yabai -m space --focus 12
alt - 3 : yabai -m space --focus 13
alt - 4 : yabai -m space --focus 14
alt - 5 : yabai -m space --focus 15
alt - 6 : yabai -m space --focus 16
alt - 7 : yabai -m space --focus 17
alt - 8 : yabai -m space --focus 18
alt - 9 : yabai -m space --focus 19
alt - 0 : yabai -m space --focus 20

# move window to space
ctrl + shift - 1 : yabai -m window --space 1;
ctrl + shift - 2 : yabai -m window --space 2;
ctrl + shift - 3 : yabai -m window --space 3;
ctrl + shift - 4 : yabai -m window --space 4;
ctrl + shift - 5 : yabai -m window --space 5;
ctrl + shift - 6 : yabai -m window --space 6;
ctrl + shift - 7 : yabai -m window --space 7;
ctrl + shift - 8 : yabai -m window --space 8;
ctrl + shift - 9 : yabai -m window --space 9;
ctrl + shift - 0 : yabai -m window --space 10;

alt + shift - 1 : yabai -m window --space 11;
alt + shift - 2 : yabai -m window --space 12;
alt + shift - 3 : yabai -m window --space 13;
alt + shift - 4 : yabai -m window --space 14;
alt + shift - 5 : yabai -m window --space 15;
alt + shift - 6 : yabai -m window --space 16;
alt + shift - 7 : yabai -m window --space 17;
alt + shift - 8 : yabai -m window --space 18;
alt + shift - 9 : yabai -m window --space 19;
alt + shift - 0 : yabai -m window --space 20;

# -- Starting/Stopping/Restarting Yabai --
# alt + shift + ctrl - q : yabai --stop-service
# alt + shift + ctrl - s : yabai --start-service
# alt + shift + ctrl - r : yabai --restart-service

# stop/start/restart yabai
# alt + ctrl - q : brew services stop yabai
# alt + ctrl - s : brew services start yabai
# alt + ctrl - r : brew services restart yabai

# app shortcut
alt - q             : open -na kitty --args nvim "$HOME/Documents/quick-note/note_$(date +%Y-%m-%d_%H-%M-%S).md"
alt - w             : open -a Firefox
alt + shift - w     : open -a "Parallels Desktop"
alt - e             : open -a Messages
alt + shift - e     : open -a KakaoTalk
alt - r             : open -a "Adobe Photoshop 2026"
alt + shift - t     : open -a Terminal
alt - y             : yabai -m window --toggle float --grid 10:10:1:1:8:8 # toggle window float
alt - u             : skhd -k "cmd - tab"
alt - i             : open -a Firefox
alt - o             : open -a Obsidian
alt - p             : open -a Passwords

alt - a             : open -a ChatGPT
alt + shift - a     : open -a anki
alt - s             : open -a Safari
alt + shift - s     : open -a "System Settings"
alt - d             : open -a Discord
# f emacs word forward
alt + shift - f     : yabai -m space --focus 1 ; open ~/Desktop
alt - g             : open -a "Adobe Lightroom"
alt - 0x029         : open -a iTerm # semicolon
alt + shift - 0x029 : open -a kitty # colon
# ctrl - 0x027        : open -a kitty # single quote

alt - z             : open -a iTerm
alt + shift - z     : open -a kitty
# x is display switching
alt - c             : open -a "Visual Studio Code"
alt + shift - c     : open -a Calendar
alt - v             : open -a "Screen Sharing"
alt + shift - v     : open -a Preview
# b emacs word back
alt + shift - b     : open -a Blender
alt - n             : open -na kitty
